{% block body %}
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    RÃ©servez votre Table
                </h2>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form_container">
                        {{ form_start(form) }}
                        <div class="btn_box">
                            <button class="btn">{{ button_label|default('Modifier') }}</button>

                            <div>
                            {{ form_widget(form.type, {'attr' : { 'class' : 'form-control' , 'placeholder' : 'type'}}) }}
                        </div>
                        <div>
                            {{ form_widget(form.description, {'attr' : { 'class' : 'form-control' , 'placeholder' : ' description'}}) }}
                        </div>
                        <div>
                            {{ form_widget(form.nbpersonne, {'attr' : { 'class' : 'form-control' , 'placeholder' : 'nombre personne'}}) }}
                        </div>
                        <div class="date-event" style="display:flex;">
                            {{ form_label(form.date) }}

                            {{ form_widget(form.date, {'attr' : { 'class' : 'form-control'}}) }}
                        </div>


                        <div class="col-4 text-right" style="display: -webkit-box;">
                            <a  style="margin-left: 105px;" class="btn btn-outline-primary btn-fw" href="{{ path('evenement_index') }}">Back</a>
                            <form style=" margin-left: 105px;" method="post" action="{{ path('evenement_delete', {'id': evenement.id}) }}" onsubmit="return confirm('Vous voulez vraiment supprimer cette evenement?');">
                                <input type="hidden" name="_token"
                                       value="{{ csrf_token('delete' ~ evenement.id) }}">
                                <button class="btn btn-outline-danger btn-fw">Delete</button>
                            </form>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
    </section>

{% endblock %}