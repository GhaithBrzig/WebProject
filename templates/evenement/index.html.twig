{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <section class="food_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Evenements
                </h2>
            </div>



            <div class="filters-content">
                <div class="row grid">
                    {% for e in evenements%}
                        <div class="col-sm-6 col-lg-4 all pizza">
                            <div class="box">
                                <div>

                                    <div class="detail-box">
                                        <h1>
                                            {{e.type}}
                                        </h1>
                                        <p>
                                            {{e.description}}
                                        </p>

                                        <p>
                                            {{e.nbpersonne}}
                                        </p>
                                        <p>
                                            {{ e.date ? e.date|date('Y-m-d') : '' }}
                                        </p>


                                        <a href="{{ path('evenement_show', {'id': e.id}) }}">show</a>
                                        <a href="{{ path('evenement_edit', {'id': e.id}) }}"><h6>Edit</h6></a>


                                    </div>
                                </div>
                            </div>

                        </div>

                    {% endfor %}

                </div>
            </div>
        </div>

    </section>

    <a href="{{ path('evenement_new') }}">Create new</a>
{% endblock %}
