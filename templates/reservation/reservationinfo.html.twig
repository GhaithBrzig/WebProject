{% extends 'Back.html.twig' %}


{% block body %}


    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
                <table class="table table-hover tm-table-small tm-product-table">
                    <thead>
                    <tr>

                        <th scope="col">Id</th>
                        <th scope="col">Nomclient</th>
                        <th scope="col">Numero</th>
                        <th scope="col">Nbpersonne</th>
                        <th scope="col">Date</th>

                        <th scope="col">Archived</th>
                        <th scope="col">&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        {% for reservation in reservations %}
                    <tr>
                        <td class="tm-product-name">{{ reservation.id }}</td>
                        <td >{{ reservation.nomclient }}</td>
                        <td>{{ reservation.numero }}</td>
                        <td>{{ reservation.nbpersonne }}</td>
                        <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>

                        <td>{{ reservation.archived ? 'Yes' : 'No' }}</td>

                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}


                    </tr>
                    </tbody>
                </table>

            </div>

            <!-- table container -->


        </div>
    </div>

{% endblock %}
